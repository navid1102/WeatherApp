<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="4dp"
        android:text="text 111"
        android:textColor="@color/with"
        android:textSize="@dimen/_11sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_daily_minTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="minTemp"
        android:textColor="@color/secondaryTextColor"
        android:textSize="@dimen/_11sdp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_day"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt_day" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_daily_maxTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="maxTemp"
        android:textColor="@color/with"
        android:textSize="@dimen/_11sdp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_daily_minTemp"
        app:layout_constraintEnd_toStartOf="@+id/txt_daily_minTemp"
        app:layout_constraintTop_toTopOf="@+id/txt_daily_minTemp" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_daily_icon"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_daily_minTemp"
        app:layout_constraintEnd_toStartOf="@+id/txt_daily_maxTemp"
        app:layout_constraintTop_toTopOf="@+id/txt_daily_minTemp"
        app:srcCompat="@drawable/ic_0_clear_sky_morning" />


</androidx.constraintlayout.widget.ConstraintLayout>

</layout>
